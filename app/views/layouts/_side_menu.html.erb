<div class="item">
  <a href="<%= incident_reports_path %>"><img src="<%= asset_path 'convictify-logo.svg' %>" max-width="250px" style="margin-top:20px;margin-bottom:20px;"/></a>
</div>
<div class="item">
  <div class="header">Prisoners</div>
  <div class="menu">
    <a class="item" href="<%= prisoners_path %>">View All</a>
    <% if logged_in? %>
      <a class="item" href="<%= new_prisoner_path %>">New Prisoner</a>
    <% end %>
  </div>
</div>
<div class="item">
  <div class="header">Cell Blocks</div>
  <div class="menu">
    <a class="item" href="<%= cell_blocks_path %>">View All</a>
  </div>
</div>
<div class="item">
  <div class="header">Incident Reports</div>
  <div class="menu">
    <a class="item" href="<%= incident_reports_path %>">View All</a>
    <% if logged_in? %>
      <a class="item" href="<%= new_incident_report_path %>">Create New</a>
    <% end %>
  </div>
</div>
<div class="item">
  <div class="header">Guards</div>
  <div class="menu">
    <% if logged_in? %>
      <a class="item" href="<%= guard_path(session[:user_id])  %>">My Profile</a>
      <%= link_to "Logout", sessions_path, method: :delete, class: "item" %>
    <% else %>
    <a class="item" href="<%= login_path %>">Login</a>
    <a class="item" href="<%= signup_path %>">Signup</a>
    <% end %>
  </div>
</div>
