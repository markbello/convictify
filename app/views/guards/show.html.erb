<div class="convict-index-show-container flex-column">
  <div>

  <h1><%= @guard.full_name %></h1>

    <div>
      <p><strong>Cell Block ID:</strong> <%= @guard.cell_block_id %></p>
      </br>
      <p><strong>Incident Reports:</strong></p>
        <% @guard.incident_reports.each do |incident_report| %>
          <% @incident_report = incident_report%>
          <%= render partial: "layouts/incident_report_loop" %>
        <% end %>
      </br>

      <h3>Prisoners:</h3>
        <% @guard.prisoners.each do |prisoner| %>
          <% @prisoner = prisoner %>
          <%= render partial: "layouts/prisoner_loop" %>
        <% end %>
    </div>

  </div>
</div>
