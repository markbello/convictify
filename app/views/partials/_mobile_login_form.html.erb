
<div class="flex-column">
  <div class="login-form-fields" style="width: 100vw;">
   <%= form_tag sessions_path, class: "ui form convict-form-fields stackable flex-column mobile-login" do %>
     <div class="item">

       <%= text_field_tag :email, nil, placeholder: "Email", class: "ui input" %>
     </div>
     <div class="item">

       <%= password_field_tag :password, nil, placeholder: "Password", class: "ui input"%>
     </div>
     <div class="item">
       <%= submit_tag "Log me in", class: "ui orange button" %>
       <a class="" href="<%= signup_path %>" style="margin-left: 30px; color:white;">Sign Up</a>
     </div>
   <% end %>

  </div>


</div>
