</div>

<% else %>
<div class="item">
  <img src="<%= asset_path 'convictify-logo-rect.svg' %>" style="width: 200px; margin-top: 20px; margin-bottom:20px; text-align: center;"/>
  <a href="<%= incident_reports_path %>"></a>
</div>
<div class="ui top fixed borderless menu">
  <%= render partial: "/partials/login_form" %>
</div>
<% end %>
