


<div id="top-menu">
  <% if logged_in? %>
    <div class="ui top fixed borderless menu" >
      <div class="item" style="margin-top: 40px;">
        <img src="<%= asset_path 'convictify-logo-rct-bright.svg' %>" class="ui centered image medium"/>
        <a href="<%= incident_reports_path %>"></a>
      </div>
      <a class="item" href="<%= leaderboard_path %>">Leaderboard</a>
      <a class="item" href="<%= incident_reports_path %>">Incident Reports</a>
      <a class="item" href="<%= guard_path(Guard.find(session[:user_id]))%>">My Profile</a>
      <%= link_to "Logout", sessions_path, method: :delete, class: "item" %>
    </div>
  <% else %>
    <div class="item" style="margin-top: 40px;">
      <img src="<%= asset_path 'convictify-logo-rct-bright.svg' %>" class="ui centered image medium" />
      <a href="<%= incident_reports_path %>"></a>
    </div>

    <div class="ui bottom fixed borderless menu" id="convict-login-footer">
      <%= render partial: "/partials/mobile_login_form" %>
    </div>
  <% end %>
